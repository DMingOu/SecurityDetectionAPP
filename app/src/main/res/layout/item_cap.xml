<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="85dp"
xmlns:tool="http://schemas.android.com/tools">
    <ImageView
    android:id="@+id/iv_cap"
    android:layout_width="41dp"
    android:layout_height="41dp"
    android:layout_below="@id/tv_cap_location"
    android:layout_alignStart="@id/tv_cap_location"
    android:layout_marginEnd="38dp"
    android:background="@mipmap/ic_launcher"

    />
    <TextView
        android:id="@+id/tv_cap_location"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="3dp"
        tool:text = "0001"
        android:textColor="@color/gray"
        />

    <TextView
        android:id="@+id/tv_cap_status"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_alignBottom="@id/iv_cap"
        android:layout_marginEnd="30dp"
        android:layout_toEndOf="@id/iv_cap"
        android:background="@drawable/shape_watch_cap_textview_status_normal"
        android:gravity="center"
        android:text="@string/normal"
        android:textColor="@color/xui_config_color_white"
        android:textSize="16sp"
        />
</RelativeLayout>