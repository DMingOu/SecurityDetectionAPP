<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_Tab"
        android:layout_marginBottom="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xui_config_color_black" />



    <com.yinglan.alphatabs.AlphaTabsIndicator
        android:id="@+id/bottom_Tab"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/menu_white_normal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5dp"
            app:tabIconNormal="@drawable/history_no_select"
            app:tabIconSelected="@drawable/history_select"
            app:tabText="历史消息"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/gray"
            app:textColorSelected="@color/blue_start"
            app:paddingTexwithIcon="1dp"
            />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="1"
            app:tabIconNormal="@drawable/watch_no"
            app:tabIconSelected="@drawable/watch_select"
            app:tabText="监控"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/gray"
            app:textColorSelected="@color/blue_start"
            app:paddingTexwithIcon="1dp"
            />

        <com.yinglan.alphatabs.AlphaTabView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_weight="1"
            app:tabIconNormal="@drawable/map_no"
            app:tabIconSelected="@drawable/map_select"
            app:tabText="地图"
            app:tabTextSize="13sp"
            app:textColorNormal="@color/gray"
            app:textColorSelected="@color/blue_start"
            app:paddingTexwithIcon="1dp"
            />
    </com.yinglan.alphatabs.AlphaTabsIndicator>

</RelativeLayout>
