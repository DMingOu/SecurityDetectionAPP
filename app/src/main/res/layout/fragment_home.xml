<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.home.ui.homeFragment">

    <com.wuhenzhizao.titlebar.widget.CommonTitleBar
        xmlns:titlebar="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tb_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:fillStatusBar="true"
        titlebar:statusBarColor = "@color/purple"
        titlebar:titleBarColor="@color/purple"
        titlebar:centerType="textView"
        titlebar:centerText="标题"
        titlebar:centerTextColor="@color/xui_config_color_white"
        titlebar:centerTextMarquee="false"
        titlebar:leftType="imageButton"
        titlebar:leftImageResource="@mipmap/toolbar_home_switch"
        titlebar:titleBarHeight="50dp"
        />
    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/xui_config_color_titlebar"
        app:tb_immersive="true"
        app:tb_barHeight="50dp"
        app:tb_leftImageResource="@drawable/ic_check_circle_white_24dp"
        app:tb_sideTextPadding="20dp"
        app:tb_actionPadding="20dp"
        app:tb_titleText="这是一个Title"
        android:visibility="gone"/>

    <com.xuexiang.xui.widget.popupwindow.status.StatusView
        android:id="@+id/status"
        style="@style/StatusView.Custom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/tb_home"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_module"
        android:layout_below="@id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>



</RelativeLayout>